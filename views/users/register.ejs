<% layout('layouts/boilerplate') %>
<div class="row">
    <div class="col-10 offset-1">
        <h1>REGISTER</h1>
        <form action="/register" method="post" class="validated-form mb-2" novalidate>
            <div class="mb-3">
                <!-- Match the label with the id of input -->
                <label class="form-label" for="username">Username</label>
                <!-- everything in the request app will be under the req.campground... -->
                <input type="text" class="form-control" id="username" name="username" required>
            </div>
            <div class="mb-3">
                <!-- Match the label with the id of input -->
                <label class="form-label" for="email">Email</label>
                <!-- everything in the request app will be under the req.campground... -->
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="mb-3">
                <!-- Match the label with the id of input -->
                <label class="form-label" for="password">Password</label>
                <!-- everything in the request app will be under the req.campground... -->
                <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <button class="btn btn-success col-12">Join</button>
        </form>
        <a href="/login">Already have an account? Login Here!</a>
    </div>
</div>