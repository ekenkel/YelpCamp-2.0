<% layout('layouts/boilerplate')%>

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-6 offset-xl-3">
            <div class="card shadow">
                <img src="https://images.unsplash.com/photo-1571863533956-01c88e79957e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1267&q=80"
                    alt="" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">Sign Up</h5>
                    <form action="/register" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <!-- Match the label with the id of input -->
                            <label class="form-label" for="username">Username</label>
                            <!-- everything in the request app will be under the req.campground... -->
                            <input type="text" class="form-control" id="username" name="username" required>
                        </div>
                        <div class="mb-3">
                            <!-- Match the label with the id of input -->
                            <label class="form-label" for="email">Email</label>
                            <!-- everything in the request app will be under the req.campground... -->
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="mb-3">
                            <!-- Match the label with the id of input -->
                            <label class="form-label" for="password">Password</label>
                            <!-- everything in the request app will be under the req.campground... -->
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>
                        <button class="btn btn-success btn-block">Register</button>
                    </form>
                </div>
            </div>
            <a href="/login" class="mb-3">Have an account? Log in</a>
        </div>
    </div>
</div>