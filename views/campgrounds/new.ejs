<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <!-- Match the label with the id of input -->
                <label class="form-label" for="title">Title</label>
                <!-- everything in the request app will be under the req.campground... -->
                <input type="text" class="form-control" id="title" name="campground[title]">
            </div>

            <label for="file" class="form-label">Image(s)</label>
            <div class="form-file mb-3 custom-file" id="file">
                <input class="form-file-input " type="file" id="image" name="images" multiple>
                <label for="image" class="form-file-label">
                    <span class="form-file-text custom-file-label">Choose files</span>
                    <span class="form-file-button">Browse</span>
                </label>
            </div>


            <div class="mb-3">
                <!-- Match the label with the id of input -->
                <label class="form-label" for="location">Location</label>
                <!-- everything in the request app will be under the req.campground... -->
                <input type="text" class="form-control" id="location" name="campground[location]" required>
            </div>
            <div class="mb-3">
                <!-- Match the label with the id of input -->
                <label class="form-label" for="description">Description</label>
                <!-- everything in the request app will be under the req.campground... -->
                <textarea type="text" class="form-control" id="description" name="campground[description]" style="height: 150px;" required></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="Username" aria-describedby="price-label"  name="campground[price]" required>
                </div>
            </div>
            <button class="btn btn-primary mb-3">Add Campground</button>
        </form>
        <a href="/campgrounds">Back to All Campgrounds</a>
    </div>
</div>
